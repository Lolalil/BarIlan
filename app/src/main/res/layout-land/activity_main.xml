<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context="com.example.android.barilan.MainActivity">

    <ImageView
        android:id="@+id/CCC"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ccc" />

    <ImageView
        android:id="@+id/BIL"
        android:layout_width="250dp"
        android:layout_height="95dp"
        android:layout_below="@id/web"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/bil" />

    <ImageView
        android:id="@+id/AAA"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/aaa" />

    <TextView
        android:id="@+id/web"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/CCC"
        android:layout_alignParentRight="true"
        android:autoLink="all"
        android:fontFamily="sans-serif-condensed"
        android:linksClickable="true"
        android:text="www1.biu.ac.il"
        android:textColor="@color/address"
        android:textSize="35sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/word"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="cursive"
        android:text="Join The excellence University"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="italic|bold" />

    <ImageView
        android:id="@+id/line"
        android:layout_width="2dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/call"
        android:layout_marginBottom="80dp"
        android:layout_marginLeft="8dp"
        android:background="@color/white" />

    <TextView
        android:id="@+id/call"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/phone"
        android:layout_alignParentLeft="true"
        android:fontFamily="cursive"
        android:paddingLeft="5dp"
        android:text="Call Now"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="italic|bold" />

    <TextView
        android:id="@+id/phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/address"
        android:layout_toRightOf="@id/line"
        android:autoLink="all"
        android:linksClickable="true"
        android:paddingBottom="5dp"
        android:paddingLeft="8dp"
        android:text="972-3-531-8111"
        android:textColor="@color/white"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/address1"
        android:layout_toRightOf="@id/line"
        android:fontFamily="sans-serif-condensed"
        android:paddingBottom="5dp"
        android:paddingLeft="8dp"
        android:text="Ramat Gan, 5290002 Israel"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/address1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="80dp"
        android:layout_toRightOf="@id/line"
        android:fontFamily="sans-serif-condensed"
        android:paddingLeft="8dp"
        android:text="Open from 6:00AM to 21:00PM"
        android:textColor="@color/white"
        android:textSize="18sp" />
</RelativeLayout>
